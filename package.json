{
  "name": "inamimapapp-monorepo",
  "version": "1.0.0",
  "description": "InamiMapApp - Full-stack mapping application monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "web"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:web && npm run install:mobile",
    "install:backend": "cd backend && npm install",
    "install:web": "cd web && npm install",
    "install:mobile": "cd mobile && flutter pub get",
    
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && flutter run",
    
    "build": "npm run build:backend && npm run build:web && npm run build:mobile",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd web && npm run build",
    "build:mobile:android": "cd mobile && flutter build apk",
    "build:mobile:ios": "cd mobile && flutter build ios",
    "build:mobile": "npm run build:mobile:android",
    
    "test": "npm run test:backend && npm run test:web && npm run test:mobile",
    "test:backend": "cd backend && npm test",
    "test:web": "cd web && npm test",
    "test:mobile": "cd mobile && flutter test",
    
    "lint": "npm run lint:backend && npm run lint:web && npm run lint:mobile",
    "lint:backend": "cd backend && npm run lint",
    "lint:web": "cd web && npm run lint",
    "lint:mobile": "cd mobile && flutter analyze",
    
    "format": "npm run format:backend && npm run format:web && npm run format:mobile",
    "format:backend": "cd backend && npm run format",
    "format:web": "cd web && npm run format",
    "format:mobile": "cd mobile && flutter format .",
    
    "clean": "npm run clean:backend && npm run clean:web && npm run clean:mobile",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:web": "cd web && rm -rf node_modules dist",
    "clean:mobile": "cd mobile && flutter clean",
    
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:web": "cd web && npm run preview"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "maps",
    "inami",
    "react",
    "flutter",
    "express",
    "monorepo"
  ],
  "author": "Hayato Shimada",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hayato/inamimapapp.git"
  },
  "bugs": {
    "url": "https://github.com/hayato/inamimapapp/issues"
  },
  "homepage": "https://github.com/hayato/inamimapapp#readme"
}